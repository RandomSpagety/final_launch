{
  "info": {
    "name": "Dental Appointment API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "Postman collection for testing Dental Appointment Management API (Auth, Patients, Appointments)"
  },
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/auth/register",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "auth",
                "register"
              ]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"John Doe\",\n  \"email\": \"john@example.com\",\n  \"password\": \"123456\"\n}"
            }
          }
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/auth/login",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "auth",
                "login"
              ]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"john@example.com\",\n  \"password\": \"123456\"\n}"
            }
          }
        }
      ]
    },
    {
      "name": "Patients",
      "item": [
        {
          "name": "Get My Profile",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/patients/me",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "patients",
                "me"
              ]
            }
          }
        },
        {
          "name": "Create/Update Profile",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/patients",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "patients"
              ]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"dateOfBirth\": \"1990-05-10\",\n  \"address\": \"123 Main St\",\n  \"phone\": \"123456789\",\n  \"extraNotes\": \"Allergic to penicillin\"\n}"
            }
          }
        }
      ]
    },
    {
      "name": "Appointments",
      "item": [
        {
          "name": "Get Appointments",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/appointments",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "appointments"
              ]
            }
          }
        },
        {
          "name": "Create Appointment",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/appointments",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "appointments"
              ]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"patientName\": \"John Doe\",\n  \"dentist\": \"Dr. Smith\",\n  \"date\": \"2025-08-15T09:00:00Z\",\n  \"reason\": \"Tooth extraction\"\n}"
            }
          }
        },
        {
          "name": "Update Appointment",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/appointments/{{appointmentId}}",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "appointments",
                "{{appointmentId}}"
              ]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"reason\": \"Routine check-up\"\n}"
            }
          }
        },
        {
          "name": "Delete Appointment",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/appointments/{{appointmentId}}",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "appointments",
                "{{appointmentId}}"
              ]
            }
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8080"
    },
    {
      "key": "token",
      "value": ""
    },
    {
      "key": "appointmentId",
      "value": ""
    }
  ]
}